<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Aravi Premachandran, David Hobson, Karnvir Bining, Nikhil Patel">

    <title>Maclubz</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="/stylesheets/viewteam.css" rel="stylesheet">
    <link rel="stylesheet" media="screen" href="https://fontlibrary.org/face/d-din" type="text/css"/>
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet">

</head>

<body>

    <% if (currentUser){ %>
        <h1 class="edit-page" data-toggle="modal" data-target="#exampleModal">EDIT PAGE</h1>
    <% } %>
    
    <div class="nav-menu text-center sidebar">
        <div class="sidebar-title">Sections</div>
        <hr class="sidebar-divider">
        <ul>
            <li class="nav-item">
                <a class="nav-link active" href="#description">
                    <i class="nav-icon far fa-list-alt"></i>Description
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#gallery">
                    <i class="nav-icon far fa-images"></i>Photos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#events">
                    <i class="nav-icon fas fa-calendar-alt"></i>Calendar
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">
                    <i class="nav-icon fas fa-home"></i>Maclubz Homepage
                </a>
            </li>
        </ul>
        <div class="sidebar-title">Connect with Us</div>
        <hr class="sidebar-divider">      
        <div class="social-item">
          <a class="nav-link" href="mailto:<%= team.email%>">
              <i class="nav-icon fas fa-envelope"></i>Email
          </a>
        </div>

        <div class="social-item">
          <a class="nav-link" href="https://www.twitter.com">
            <i class="nav-icon fab fa-twitter-square"></i>Twitter
        </a>
        </div>
        <div class="social-item">
            <a class="nav-link" href="https://www.facebook.com">
                <i class="nav-icon fab fa-facebook"></i>Facebook
            </a>
        </div>
    </div>

<main class="container-fluid">  
    <div class="row section section-club-highlight">
        <div class="col-md-10">
            <div>
                <h1 class="display-5 section-title"><%= team.name %></h1>
                <hr class="section-title-divider">
            </div>
            <div class="row content">
                <div class="col-md-1"></div>
                <div class="col-md-4 text-center"><img class="banner" src="<%= team.mainImage %>"></div>
                <div class="col-md-1"></div>
                <div class="col-md-5 text-left club-quotes">
                    "<%= team.quotes[0][0] %>"
                    <div class="quote-author">- <%= team.quotes[0][1] %></div>
                    "<%= team.quotes[1][0] %>"
                    <div class="quote-author">- <%= team.quotes[1][1] %></div>
                </div> <!--End club-quotes-->
            </div>
        </div>
    </div> <!--End club-highlight-->

    <div class="row section section-club-description" id="description">
        <div class="col-md-10">
            <div>
                <h1 class="display-5 section-title">Description</h1>
                <hr class="section-title-divider">
            </div>
            <div class="row content">
                <div class="col-md-10 text-left">
                    <%= team.description %>
                </div>
            </div>
        </div>
    </div> <!--End club-description-->

    <div class="row section section-gallery" id="gallery">

        <div class="col-md-10">
            <div>
              <h1 class="display-5 section-title-white">Photos</h1>
              <hr class="section-title-divider-gallery">
          </div>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="<%= team.carouselImages[0] %>">
                    <!--Image source: nochallenge.net-->
                </div>

                <% for(let i = 1; i < team.carouselImages.length; i++){ %>
                <div class="carousel-item">
                    <img class="d-block w-100" src="<%= team.carouselImages[i] %>">
                    <!--Image source: Intel Developer Zone-->
                </div>
                <% } %>

                  <!-- <div class="carousel-item">
                    <img class="d-block w-100" src="ses-header.png">
                </div> -->
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
            <!-- <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="indicator active"></li>
                <li data-target="#myCarousel" data-slide-to="1" class="indicator"></li>
                <li data-target="#myCarousel" data-slide-to="2" class="indicator"></li>
            </ol> -->
        </div>
    </div> <!--End gallery-->

    <div class="row section section-calendar" id="events">
        <div class="col-md-10">
            <div>
                <h1 class="display-5 section-title">Calendar of Events</h1>
                <hr class="section-title-divider">
            </div>
            <iframe id="calendar" src="<%= team.calendar %>"></iframe>
        </div>
    </div> <!--End calendar section-->

    <div class="row section-contact text-center" id=contact>
        <div class="container text-center">
            <h1 class="display-5 section-title-contact">Contact Us</h1>
            <hr class="section-title-divider-contact">
        </div>
        <div class="container-fluid">
            <div class="row sub-section-contact">
                <div class="col-md-6 contact-entry"><i class="nav-icon fas fa-envelope"></i> <%= team.email %></div>
                <div class="col-md-6 contact-entry"><i class="nav-icon fas fa-envelope"></i>
                    <form action="/teams/<%= team._id %>" method="GET">
                        <input class="text-center contact-entry" placeholder="Subscribe to mailing list">
                    </form>
                </div>
            </div>
        </div>
    </div> <!--End contact section-->

        <!-- MODAL FOR LOGIN -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content text-center">
                <div class="modal-header">
                    <h2 class="modal-title text-center" id="exampleModalLabel">Out of Scope</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>See documentation for more details.</p>
                </div>
            </div>
        </div>
    </div>

</main>

	   <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" 
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" 
        crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    </body>
    </html>